<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp">

    <EditText
        android:id="@+id/mean_val"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Среднее (μ)"/>

    <EditText
        android:id="@+id/variance_value"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Вариация (σ²)" />

    <Button
        android:id="@+id/get_random_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Получи_число" />

    <TextView
        android:id="@+id/random_number_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рандомное число появится здесь" />
</LinearLayout>